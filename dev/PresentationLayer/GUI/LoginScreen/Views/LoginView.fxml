<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"  
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="PresentationLayer.GUI.LoginScreen.Controllers.LoginViewController"
            styleClass="root" prefWidth="360" prefHeight="240">

  <top>
    <HBox styleClass="header-bar">
      <Label text="ðŸ” SuperLee Login" styleClass="header-title"/>
    </HBox>
  </top>

  <center>
    <GridPane styleClass="center-pane" alignment="CENTER" hgap="10" vgap="10">
      <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
      </padding>

      <Label text="User ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      <TextField fx:id="userIdField"
                 promptText="Enter user ID"
                 styleClass="text-field"
                 GridPane.rowIndex="0" GridPane.columnIndex="1"/>

      <Button text="Login"
              onAction="#onLoginClicked"
              styleClass="button"
              defaultButton="true"
              GridPane.rowIndex="1" GridPane.columnIndex="1"/>

      <Label fx:id="errorLabel"
             styleClass="error-label"
             
             GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
  </center>

</BorderPane>