<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="PresentationLayer.GUI.SupplierScreen.Controllers.OrdersController"
      spacing="20"
      styleClass="content-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Section Title and toolbar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="ðŸ“¦ Orders" styleClass="section-title"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="newOrderBtn"
                text="New Order"
                styleClass="primary-button"
                onAction="#onNewOrder"/>
        <Button fx:id="refreshBtn"
                text="Refresh"
                styleClass="secondary-button"
                onAction="#onRefresh"/>
    </HBox>

    <!-- Search bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Search:"/>
        <TextField fx:id="searchField"
                   promptText="Search ordersâ€¦"
                   styleClass="modern-field"
                   onKeyReleased="#onSearch"/>
    </HBox>

    <!-- Orders Table -->
    <TableView fx:id="ordersTable"
               styleClass="table-view"
               prefHeight="600">
        <columns>
            <TableColumn fx:id="orderIdCol"     text="Order ID"      prefWidth="100"/>
            <TableColumn fx:id="supplierIdCol"  text="Supplier ID"   prefWidth="100"/>
            <TableColumn fx:id="dateCol"        text="Date"          prefWidth="150"/>
            <TableColumn fx:id="statusCol"      text="Status"        prefWidth="120"/>
            <TableColumn fx:id="totalCol"       text="Total Items"   prefWidth="100"/>
            <TableColumn fx:id="actionsCol"     text="Actions"       prefWidth="200"/>
        </columns>
    </TableView>

</VBox>