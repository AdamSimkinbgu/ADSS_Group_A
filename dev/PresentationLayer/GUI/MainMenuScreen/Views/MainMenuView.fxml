<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>  <!-- for spacer -->

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="PresentationLayer.GUI.MainMenuScreen.Controllers.MainMenuController"
            prefWidth="1640" prefHeight="1000"
            styleClass="root">

  <!-- Top header -->
  <top>
    <HBox styleClass="header-bar" spacing="10" alignment="CENTER_LEFT">
      <ToggleButton fx:id="toggleBtn"
                    text="☰"
                    styleClass="sidebar-toggle"/>
      <Label text=""
             styleClass="header-title"/>
      <Label fx:id="welcomeLabel"
             styleClass="header-title"/>
    </HBox>
  </top>

  <!-- Left sidebar -->
  <left>
    <VBox fx:id="sidebar"
          styleClass="sidebar"
          spacing="5">
      <Button fx:id="suppliersBtn"
              text="Suppliers"
              styleClass="nav-button"/>
      <Button fx:id="inventoryBtn"
              text="Inventory"
              styleClass="nav-button"/>
      <Button fx:id="hrBtn"
              text="HR"
              styleClass="nav-button"/>
      <Button fx:id="shipmentsBtn"
              text="Shipments"
              styleClass="nav-button"/>

      <!-- spacer to push logout to bottom -->
      <Pane VBox.vgrow="ALWAYS"/>
      <Button fx:id="logoutBtn"
              text="Logout"
              styleClass="nav-button, logout-button"/>
    </VBox>
  </left>

  <!-- Main content area -->
  <center>
        <StackPane fx:id="contentArea">
            <!-- Content will be loaded here dynamically -->
            <VBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>
                <Label text="Welcome to Super-Lee Management System" styleClass="welcome-text"/>
                <Label text="Select an option from the sidebar to get started" styleClass="welcome-subtext"/>
            </VBox>
        </StackPane>
    </center>

  <!-- Bottom footer -->
  <bottom>
    <HBox styleClass="footer-bar" spacing="10" alignment="CENTER">
      <Label text="© 2025 SuperLee - Group A" />
      <Pane HBox.hgrow="ALWAYS" />
      <Label text="Version 1.0" />
      <Label text="All rights reserved." styleClass="rights-label"/>
    </HBox>
  </bottom>
  
</BorderPane>